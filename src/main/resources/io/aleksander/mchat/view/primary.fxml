<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.TextFlow?>

<?import java.net.URL?>
<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.aleksander.mchat.controller.PrimaryController">
   <bottom>
      <SplitPane dividerPositions="0.5" prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
            <TextField fx:id="messageTextField" onAction="#sendMessage" />
            <Button minWidth="60.0" onAction="#sendMessage" text="Send" />
        </items>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </BorderPane.margin>
      </SplitPane>
   </bottom>
   <center>
      <ScrollPane fx:id="messageLogScrollPane" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <content>
            <TextFlow fx:id="messageLog" prefHeight="200.0" prefWidth="200.0" />
         </content>
      </ScrollPane>
   </center>

    <stylesheets>
        <URL value="@stylesheet.css" />
    </stylesheets>
</BorderPane>
