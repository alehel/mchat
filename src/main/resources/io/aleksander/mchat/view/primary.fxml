<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<BorderPane prefHeight="374.0" prefWidth="574.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.aleksander.mchat.controller.PrimaryController">
   <bottom>
      <SplitPane dividerPositions="0.5" prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
            <TextField fx:id="messageTextField" onAction="#sendMessage" />
            <Button minWidth="60.0" onAction="#sendMessage" text="Send" />
        </items>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </BorderPane.margin>
      </SplitPane>
   </bottom>

    <stylesheets>
        <URL value="@stylesheet.css" />
    </stylesheets>
   <left>
      <VBox prefWidth="150.0" BorderPane.alignment="CENTER">
         <children>
            <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0">
              <items>
                <Button mnemonicParsing="false" text="+" />
              </items>
            </ToolBar>
            <ListView VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></ListView>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <WebView fx:id="chatWebView" prefHeight="-1.0" prefWidth="-1.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </WebView>
   </center>
</BorderPane>
